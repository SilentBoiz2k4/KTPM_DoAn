{
  "name": "backend",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=integration",
    "test:smoke": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=smoke --verbose",
    "test:unit:order": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/order.test.js",
    "test:unit:cart": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/cart.test.js",
    "test:unit:payment": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/payment.test.js",
    "test:int:order": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration/order.integration.test.js",
    "test:int:cart": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration/cart.integration.test.js",
    "test:int:checkout": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration/checkout.integration.test.js",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=e2e --verbose",
    "test:security": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=security --verbose",
    "perf:browse": "npx artillery run tests/performance/checkout.performance.yml",
    "perf:order": "npx artillery run tests/performance/order-api.performance.yml",
    "perf:stress": "npx artillery run tests/performance/stress.performance.yml",
    "perf:all": "npm run perf:browse && npm run perf:order",
    "perf:report": "npx artillery run tests/performance/checkout.performance.yml --output results.json && npx artillery report results.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.3.5",
    "csv-write-stream": "^2.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "fs": "^0.0.1-security",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.9.0",
    "multer": "^2.0.2",
    "ora": "^6.1.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "artillery": "^2.0.27",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.0.0",
    "nodemon": "^2.0.20",
    "supertest": "^7.1.4"
  }
}
