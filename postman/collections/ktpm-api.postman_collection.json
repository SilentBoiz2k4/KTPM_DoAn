                  "// Lý do fail: Không có token hoặc token không phải admin",
                  "pm.test('FAIL - Should access admin endpoint', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('FAIL - Response should be array of users', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer invalid_token_here" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "FAIL - Invalid Product ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// TEST CASE 4: Lấy product với ID không hợp lệ",
                  "// Mong đợi: 200 với product data (nhưng thực tế sẽ trả về 404 hoặc 500)",
                  "// Lý do fail: ID 'invalid123' không phải ObjectId hợp lệ của MongoDB",
                  "pm.test('FAIL - Should return product', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('FAIL - Response should have product name', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('name');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/invalid123",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "invalid123"]
            }
          }
        },
        {
          "name": "FAIL - Missing Required Fields",
          "event": [
            {
              "listen": "test",
