              "listen": "test",
              "script": {
                "exec": [
                  "// TEST CASE 1: Gọi endpoint không tồn tại",
                  "// Mong đợi: 200 (nhưng thực tế sẽ trả về 404)",
                  "// Lý do fail: Endpoint /api/nonexistent không tồn tại trong backend",
                  "pm.test('FAIL - Endpoint should return 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/nonexistent",
              "host": ["{{baseUrl}}"],
              "path": ["api", "nonexistent"]
            }
          }
        },
        {
          "name": "FAIL - Invalid Login Credentials",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// TEST CASE 2: Đăng nhập với thông tin sai",
                  "// Mong đợi: 200 với token (nhưng thực tế sẽ trả về 401)",
                  "// Lý do fail: Email/password không đúng, server trả về 401 Unauthorized",
                  "pm.test('FAIL - Login should succeed', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('FAIL - Response should have token', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"wrong@email.com\",\n  \"password\": \"wrongpassword\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/signin",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "signin"]
